<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardCornerRadius="12dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp">
            <ImageView
                android:id="@+id/PopUpOption_img"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/PopUpOption_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:text="Option name"/>
                <TextView
                    android:id="@+id/PopUpOption_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"
                    android:text="350 DZD"/>
            </LinearLayout>
            <TextView
                android:id="@+id/PopUpOption_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/opensans_regular"
                android:textSize="16dp"
                android:text="Option description"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>